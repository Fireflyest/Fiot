<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ConfigActivity">

    <data>
        <variable
            name="device"
            type="com.fireflyest.fiot.bean.Device" />
        <import type="com.fireflyest.fiot.util.CalendarUtil"/>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/config_toolbar"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorOnSurface"
                app:menu="@menu/menu_config"
                app:titleTextAppearance="@style/text_title"
                app:subtitleTextAppearance="@style/text_subtitle"
                app:title="@{device.name}"
                app:subtitle="@{@string/create_time + CalendarUtil.convertTime(device.create)}"
                app:navigationIcon="@drawable/ic_back" />

            <TextView
                android:id="@+id/config_general_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/text_tip"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:text="@string/general_config"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/config_general_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:padding="12dp">

                <TextView
                    android:id="@+id/config_display_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/text_bold"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:paddingVertical="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/display"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/config_display_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/layout_theme"
                    android:checked="@={device.display}"
                    app:layout_constraintTop_toTopOf="@+id/config_display_text"
                    app:layout_constraintBottom_toBottomOf="@+id/config_display_text"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Spinner
                android:id="@+id/config_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                tools:listitem="@layout/item_service"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="12dp"/>

            <TextView
                android:id="@+id/config_bluetooth_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/text_tip"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:text="@string/bluetooth_config"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/config_bluetooth_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:padding="12dp">

                <TextView
                    android:id="@+id/config_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/text_bold"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:paddingVertical="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/bluetooth_address"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/config_address_text"
                    app:layout_constraintBottom_toBottomOf="@+id/config_address_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@{device.address}" />

                <TextView
                    android:id="@+id/config_auto_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:theme="@style/text_bold"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:paddingVertical="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/config_address_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/auto_connect"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/config_auto_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/layout_theme"
                    android:checked="@={device.auto}"
                    app:layout_constraintTop_toTopOf="@+id/config_auto_text"
                    app:layout_constraintBottom_toBottomOf="@+id/config_auto_text"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Spinner
                android:id="@+id/config_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                tools:listitem="@layout/item_service"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="12dp"/>

            <Spinner
                android:id="@+id/config_characteristic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                tools:listitem="@layout/item_characteristic"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="12dp"/>

            <TextView
                android:id="@+id/config_web_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/text_tip"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:text="@string/web_config"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/config_web_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:padding="12dp">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</layout>