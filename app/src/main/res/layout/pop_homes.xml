<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_white">

    <TextView
        android:id="@+id/homes_manager"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="?attr/itemTextColor"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:text="@string/home_manager"
        android:gravity="center|start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:drawableEndCompat="@drawable/ic_forward_small" />

    <View
        android:id="@+id/homes_line"
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:background="?attr/backgroundColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homes_manager" />

    <TextView
        android:id="@+id/homes_select"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="?attr/itemTextColor"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:gravity="center|start"
        app:layout_constraintTop_toBottomOf="@+id/homes_line"
        app:layout_constraintStart_toStartOf="parent"
        app:drawableEndCompat="@drawable/ic_select" />


</androidx.constraintlayout.widget.ConstraintLayout>